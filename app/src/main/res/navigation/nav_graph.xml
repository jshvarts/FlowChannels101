<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userReposFragment">

    <fragment
        android:id="@+id/userReposFragment"
        android:name="com.example.coroutines.views.UserReposFragment"
        android:label="@string/nav_title_repos"
        tools:layout="@layout/user_repos_fragment">

        <action
            android:id="@+id/action_repos_to_user_details"
            app:destination="@+id/userDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.example.coroutines.views.UserDetailFragment"
        android:label="@string/nav_title_user_details"
        tools:layout="@layout/user_details_fragment">

        <argument
            android:name="username"
            app:argType="string" />
    </fragment>

</navigation>